export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export PATH="$PATH:$HOME/Code/Projects/dotfiles/mac/scripts"
export SECOND_BRAIN=("/home/elgohr/Notes")

alias vi="nvim"
alias cat="bat"
alias tmuxa="tmux attach-session -t default || tmux new-session -s default"

# For direnv .envrc
# eval "$(direnv hook zsh)"

# For Tauri Mobile targets
